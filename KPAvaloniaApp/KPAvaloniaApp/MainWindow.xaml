<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KPAvaloniaApp">
  <Window.Styles>
    <Style Selector="Button">
      <Setter Property="Margin"
              Value="10,0"/>
      <Setter Property="Padding"
              Value="10,0"/>
    </Style>
  </Window.Styles>
  <DockPanel>
  <TextBlock DockPanel.Dock="Top" Text="My Avalonia App"/>
    <TabControl>
      <TabItem Header="Picture">
        <Grid ColumnDefinitions="*"
              RowDefinitions="Auto,Auto">

          <StackPanel Orientation="Horizontal">
            <TextBlock Text="Select a file to open: "/>
            <TextBox Text="{Binding PathToPicture}" Width="300"/>
            <Button Content="Browse" Command="{Binding LoadImage}"/>
            <Button Content="Load" Command="{Binding FindFile}"/>            
          </StackPanel>

          <Canvas Grid.Row="1" Name="PictureViewer">
          </Canvas>
          
        </Grid>
      </TabItem>

      <TabItem Header="Map">
        
      </TabItem>
    </TabControl>
  </DockPanel>
</Window>